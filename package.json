  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/prisma-deploy.js && next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
